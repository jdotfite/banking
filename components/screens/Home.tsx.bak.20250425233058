// components/screens/Home.tsx
import React, { useState, useEffect } from 'react';
import { motion, useAnimate } from 'framer-motion';
import { getDefaultCard } from '@/lib/data/cards';
import { getTransactions } from '@/lib/data/transactions';
import CreditCard from '../ui/card/CreditCard'; 
import TransactionContainer from '../ui/transactions/TransactionContainer';
import Header from '../ui/navigation/Header';
import LoadingSpinner from '../ui/common/LoadingSpinner';

const Home: React.FC = () => {
  const card = getDefaultCard();
  const transactions = getTransactions();
  const [isLoading, setIsLoading] = useState(true);
  const [cardRef, animate] = useAnimate();

  // Simulate loading state
  useEffect(() => {
    const timer = setTimeout(() => {
      setIsLoading(false);
    }, 800);
    
    return () => clearTimeout(timer);
  }, []);

  // Start animation after loading finishes
  useEffect(() => {
    if (!isLoading) {
      // Delay animation slightly to allow component to render
      setTimeout(() => {
        animate(cardRef.current, { y: 0, opacity: 1 }, { 
          type: "spring", 
          damping: 25, 
          stiffness: 120,
          delay: 0.1 
        });
      }, 100);
    }
  }, [isLoading, animate, cardRef]);

  if (isLoading) {
    return (
      <div className="flex items-center justify-center h-screen bg-app-black">
        <LoadingSpinner size="large" />
      </div>
    );
  }

  return (
    <div className="relative min-h-screen bg-app-black text-white animate-fade-in">
      <Header userName="Jess" />
      
      <div className="px-5"> {/* Increased pb-32 to create space for transactions */}
        {/* Card with initial state completely off-screen */}
        <motion.div 
          ref={cardRef}
          className="mb-4"
          initial={{ y: 1000, opacity: 0 }}
          // Animation will be triggered via useAnimate hook
        >
          <CreditCard card={card} />
        </motion.div>
      </div>
      
      <TransactionContainer transactionGroups={transactions} />
    </div>
  );
};

export default Home;